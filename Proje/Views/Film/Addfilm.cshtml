@model Entity.Concrete.Film

<form asp-action="Addfilm">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">

                <p class="card-description"> Yeni Film Ekleme Paneli </p>

                <div class="form-group">
                    <label>Film Adı</label>
                    <input type="text" class="form-control" asp-for="@Model.Name">
                </div>
                <div class="form-group">
                    <label>Film Türü</label>
                    <input type="text" class="form-control" asp-for="@Model.Genre">
                </div>
                <div class="form-group">
                    <label>Film Yapımcısı</label>
                    <input type="text" class="form-control" asp-for="@Model.Director">
                </div>
                <div class="form-group">
                    <label>Film Yılı</label>
                    <input type="text" class="form-control" asp-for="@Model.Year">
                </div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <button class="btn btn-dark">İptal</button>

            </div>
        </div>
    </div>
</form>